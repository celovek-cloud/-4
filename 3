â•šâ•â•â•â•©â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•©â•â•â•â•â•â•â•â•â• """)

drink = input('Ğ’Ğ²ĞµĞ´Ğ¸Ñ‚Ğµ Ğ½Ğ°Ğ·Ğ²Ğ°Ğ½Ğ¸Ğµ Ğ¸Ğ»Ğ¸ Ğ½Ğ¾Ğ¼ĞµÑ€ Ğ½Ğ°Ğ¿Ğ¸Ñ‚ĞºĞ°: ')
kolvo = int(input('Ğ’Ğ²ĞµĞ´Ğ¸Ñ‚Ğµ ĞºĞ¾Ğ»Ğ¸Ñ‡ĞµÑÑ‚Ğ²Ğ¾ Ğ½Ğ°Ğ¿Ğ¸Ñ‚ĞºĞ¾Ğ²: '))
skidka = input('Ğ’Ğ²ĞµĞ´Ğ¸Ñ‚Ğµ ĞºĞ¾Ğ´ ÑĞºĞ¸Ğ´ĞºĞ¸: ')

def drink (drink):
    match drink:
        case '1' | 'ĞšĞ¾Ñ„Ğµ':
            drink = 'ĞšĞ¾Ñ„Ğµ â˜• '
        case '2' | 'Ğ§Ğ°Ğ¹':
            drink = 'Ğ§Ğ°Ğ¹ ğŸµ'
        case '3' | 'Ğ¡Ğ¾Ğº':
            drink = 'Ğ¡Ğ¾Ğº ğŸ§ƒ'
        case '4' | 'Ğ’Ğ¾Ğ´Ğ°':
            drink = 'Ğ’Ğ¾Ğ´Ğ° ğŸ’§'
        case '5' | 'Ğ›Ğ¸Ğ¼Ğ¾Ğ½Ğ°Ğ´':
            drink = 'Ğ›Ğ¸Ğ¼Ğ¾Ğ½Ğ°Ğ´ ğŸ¥¤'
        case _:
            print('ĞĞ¨Ğ˜Ğ‘ĞšĞ! Ğ’ Ğ¼ĞµĞ½Ñ Ğ¾Ñ‚ÑÑƒÑ‚ÑĞ²ÑƒĞµÑ‚ Ñ‚Ğ°ĞºĞ¾Ğ¹ Ğ½Ğ°Ğ¿Ğ¸Ñ‚Ğ¾Ğº')
    return drink

def price (drink):
    match drink:
        case '1' | 'ĞšĞ¾Ñ„Ğµ':
            price = int(PRICE_COFFEE)
        case '2' | 'Ğ§Ğ°Ğ¹':
            price = int(PRICE_TEA)
        case '3' | 'Ğ¡Ğ¾Ğº':
            price = int(PRICE_JUISE)
        case '4' | 'Ğ’Ğ¾Ğ´Ğ°':
            price = int(PRICE_WATER)
        case '5' | 'Ğ›Ğ¸Ğ¼Ğ¾Ğ½Ğ°Ğ´':
            price = int(PRICE_LEMONADE)
        case _:
            print('ĞĞ¨Ğ˜Ğ‘ĞšĞ! Ğ’ Ğ¼ĞµĞ½Ñ Ğ¾Ñ‚ÑÑƒÑ‚ÑĞ²ÑƒĞµÑ‚ Ñ‚Ğ°ĞºĞ¾Ğ¹ Ğ½Ğ°Ğ¿Ğ¸Ñ‚Ğ¾Ğº')
    return drink

def itog (kolvo):
    match drink:
        case '1' | 'ĞšĞ¾Ñ„Ğµ':
            itog == kolvo*PRICE_COFFEE
        case '2' | 'Ğ§Ğ°Ğ¹':
            itog == kolvo*PRICE_TEA
        case '3' | 'Ğ¡Ğ¾Ğº':
            itog == kolvo*PRICE_JUISE
        case '4' | 'Ğ’Ğ¾Ğ´Ğ°':
            itog == kolvo*PRICE_WATER
        case '5' | 'Ğ›Ğ¸Ğ¼Ğ¾Ğ½Ğ°Ğ´':
            itog == kolvo*PRICE_LEMONADE
        case _:
            print('ĞĞ¨Ğ˜Ğ‘ĞšĞ! Ğ’ Ğ¼ĞµĞ½Ñ Ğ¾Ñ‚ÑÑƒÑ‚ÑĞ²ÑƒĞµÑ‚ Ñ‚Ğ°ĞºĞ¾Ğ¹ Ğ½Ğ°Ğ¿Ğ¸Ñ‚Ğ¾Ğº')
    return itog

def emoji_drink(drink):
    match drink:
        case '1' | 'ĞšĞ¾Ñ„Ğµ':
            emoji = 'â˜• '
        case '2' | 'Ğ§Ğ°Ğ¹':
            emoji = 'ğŸµ'
        case '3' | 'Ğ¡Ğ¾Ğº':
            emoji = 'ğŸ§ƒ'
        case '4' | 'Ğ’Ğ¾Ğ´Ğ°':
            emoji = 'ğŸ’§'
        case '5' | 'Ğ›Ğ¸Ğ¼Ğ¾Ğ½Ğ°Ğ´':
            emoji = 'ğŸ¥¤'
        case _:
            print('ĞĞ¨Ğ˜Ğ‘ĞšĞ! Ğ’ Ğ¼ĞµĞ½Ñ Ğ¾Ñ‚ÑÑƒÑ‚ÑĞ²ÑƒĞµÑ‚ Ñ‚Ğ°ĞºĞ¾Ğ¹ Ğ½Ğ°Ğ¿Ğ¸Ñ‚Ğ¾Ğº')
    return emoji_drink

def okonchanie(kolvo):
    if kolvo == 1:
        okonchanie == 'Ğ¿Ğ¾Ñ€Ñ†Ğ¸Ñ'
    elif 2 <= kolvo <= 4:
        okonchanie == 'Ğ¿Ğ¾Ñ€Ñ†Ğ¸Ğ¸'
    elif kolvo >= 5:
        okonchanie == 'Ğ¿Ğ¾Ñ€Ñ†Ğ¸Ğ¹'
    else:
        print('ĞĞ¨Ğ˜Ğ‘ĞšĞ! ĞĞµĞ¿Ñ€Ğ°Ğ²Ğ¸Ğ»ÑŒĞ½Ğ¾ Ğ²Ğ²ĞµĞ´ĞµĞ½Ğ¾ ĞºĞ¾Ğ»Ğ¸Ñ‡ĞµÑÑ‚Ğ²Ğ¾ Ğ¿Ğ¾Ñ€Ñ†Ğ¸Ğ¹')
    return okonchanie

def skidka(skidka):
    match skidka:
        case 'STUDENT':
            skidka = -itog(kolvo)*SKIDKA_STUDENT
        case 'PENCIONERI':
            skidka = -itog(kolvo)*SKIDKA_PENCIONERI
        case _:
            print()
    return skidka

print('â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—')
print(f'â•‘  {emoji_drink(drink)} ĞšĞ’Ğ˜Ğ¢ĞĞĞ¦Ğ˜Ğ¯ ĞšĞĞ¤Ğ• {emoji_drink(drink)}  â•‘')
