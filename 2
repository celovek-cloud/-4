A = int(input('Введите первое число A:'))
B = int(input('Введите второе число B:'))

def sum(A,B):
    if A > B:
        return 0, 0
    if A % 2 == 0:
        sum_even, sum_odd = sum(A + 1,B)
        return A + sum_even, sum_odd
    else:
        sum_even, sum_odd = sum(A + 1,B)
        return sum_even, A + sum_odd

sum_even, sum_odd = sum(A,B)
print(f'Разница сумм четных и нечетных чисел в промежутке от {A} до {B} равна {sum_even-sum_odd}')
