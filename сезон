#–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —Å–µ–∑–æ–Ω–∞
mesyac = int(input('–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä –º–µ—Å—è—Ü–∞ (1-12):'))

match mesyac:
    case 1 | 2 | 12:
        print(f'{mesyac} –º–µ—Å—è—Ü - —ç—Ç–æ –∑–∏–º–∞ ‚ùÑÔ∏è')
    case 3 | 4 | 5:
        print(f'{mesyac} –º–µ—Å—è—Ü - —ç—Ç–æ –≤–µ—Å–Ω–∞ üå∏ ')
    case 6 | 7 | 8:
        print(f'{mesyac} –º–µ—Å—è—Ü - —ç—Ç–æ –ª–µ—Ç–æ üèñÔ∏è ')
    case 9 | 10 | 11:
        print(f'{mesyac} –º–µ—Å—è—Ü - —ç—Ç–æ –æ—Å–µ–Ω—å üçÇ ')
    case _:
        print('–ù–µ—Ç —Ç–∞–∫–æ–≥–æ –º–µ—Å—è—Ü–∞ ü§∑‚Äç‚ôÇÔ∏è ')
