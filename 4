import math
def calculate_rectangle_area(width, height):
    return width * height
def calculate_circle_area(radius):
    return math.pi * radius**2
weight, height = map(float, input("Введите высоту и ширину прямоугольника через пробел: ").split())
print(f'Площадь прямоугольника со сторонами {weight} и {height} равна {calculate_rectangle_area(weight, height)}')
radius = float(input("Введите радиус: "))
print(f'Площадь круга с радиусом {radius} равна {calculate_circle_area(radius)})
